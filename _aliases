# ignore .git folder
alias ctags="ctags -R --exclude=.git"

# print in human readable form
alias df="df -h"

 # for ctags
alias ctags="`brew --prefix`/bin/ctags"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias dl="cd ~/Downloads"
alias g="git"
alias h="history"

# untar
alias untar='tar xvf'

# Stopwatch
alias timer='echo "Timer started. Stop with Ctrl-D." && date && time cat && date'
